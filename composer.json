{
    "name": "codebyzach/cbz-shopify",
    "type": "library",
    "license": "MIT",
    "description" : "PHP library for interacting with the Shopify REST & GraphQL API",
    "keywords": [
        "shopify",
        "shopify-api",
        "rest-api",
        "graphql"
    ],
    "homepage": "https://github.com/codebyzach/cbz-shopify",
    "authors": [
        {
            "name": "Zachary Miller",
            "email": "codebyzach@gmail.com",
            "homepage": "https://codebyzach.com"
        },
        {
            "name": "MichaÃ«l Gallego",
            "email": "mic.gallego@gmail.com",
            "homepage": "https://www.michaelgallego.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "guzzlehttp/guzzle-services": "^1.2",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "laminas/laminas-diactoros": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "laminas/laminas-servicemanager": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "CbzShopify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CbzShopifyTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    },
    "extra": {
        "codebyzach": {
            "config-provider": [
                "CbzShopify\\ConfigProvider"
            ]
        }
    }
}
